class Solution {
public:
    vector<vector<int>> threeSum(vector<int>& nums) {
        int n=nums.size();
        if(n==3)
        {
            if(nums[0]+nums[1]+nums[2] == 0)
                {
                    return {nums[0],nums[1],nums[2]};
                }
                else
                    return {};
        }
        for(int i=0;i<n-2;i++)
        {
            int j=i+1; int k=i+2;
            while(j<n && k<n)
            {
                if(nums[i]+nums[j]+nums[k] == 0)
                {
                    return {nums[i],nums[j],nums[k]};
                }
                j++;k++;
            }
        }
    }
};
